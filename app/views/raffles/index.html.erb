<p id="notice"><%= notice %></p>

<h1>Raffles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Probable draw at</th>
      <th>Start sale at</th>
      <th>Finishes sale at</th>
      <th>Drawn at</th>
      <th>Ticket value</th>
      <th>User</th>
      <th>Kind</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @raffles.each do |raffle| %>
      <tr>
        <td><%= raffle.title %></td>
        <td><%= raffle.description %></td>
        <td><%= raffle.probable_draw_at %></td>
        <td><%= raffle.start_sale_at %></td>
        <td><%= raffle.finishes_sale_at %></td>
        <td><%= raffle.drawn_at %></td>
        <td><%= raffle.ticket_value %></td>
        <td><%= raffle.user_id %></td>
        <td><%= raffle.kind_id %></td>
        <td><%= link_to 'Show', raffle %></td>
        <td><%= link_to 'Edit', edit_raffle_path(raffle) %></td>
        <td><%= link_to 'Destroy', raffle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

