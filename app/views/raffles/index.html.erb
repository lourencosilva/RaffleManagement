<% content_for :title do %>
  Raffles
<% end %>

<div class="page-header">
  <h1>Raffles</h1>
  
  <%= link_to new_raffle_path, class: 'btn btn-primary' do %>
    <%= icon 'fas', 'plus' %>
    Create Raffle
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover table-bg-scale: -80%">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Probable draw at</th>
        <th>Start sale at</th>
        <th>Finishes sale at</th>
        <th>Drawn at</th>
        <th>Ticket value</th>
        <th>User</th>
        <th>Kind</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @raffles.each do |raffle| %>
        <tr>
          <td><%= raffle.title %></td>
          <td><%= raffle.description %></td>
          <td><%= raffle.probable_draw_at.strftime("%FT%T") %></td>
          <td><%= raffle.start_sale_at.strftime("%FT%T") %></td>
          <td><%= raffle.finishes_sale_at.strftime("%FT%T") %></td>
          <td><%= raffle.drawn_at %></td>
          <td><%= raffle.ticket_value %></td>
          <td><%= raffle.user.name %></td>
          <td><%= raffle.kind %></td>
          <td>
            <%= link_to raffle, class: 'btn btn-info btn-sm' do %>
              <%= icon 'fas', 'eye', class: 'fa-fw' %>
            <% end %>
            <%= link_to edit_raffle_path(raffle), class: 'btn btn-success btn-sm' do %>
              <%= icon 'fas', 'edit', class: 'fa-fw' %>
            <% end %>
            <%= link_to raffle, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' do %>
              <%= icon 'fas', 'times', class: 'fa-fw' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
