
<%= simple_form_for @raffle do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :probable_draw_at %>
    <%= f.input :start_sale_at %>
    <%= f.input :finishes_sale_at %>
    <%= f.input :drawn_at %>
    <%= f.input :ticket_value %>
    <%= f.association :user %>
    <%= f.association :kind %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, f.object.new_record? ? 'Criar Raffle' : 'Atualizar Raffle', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
