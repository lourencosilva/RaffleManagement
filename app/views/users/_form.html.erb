<%= simple_form_for @user do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :photo %>
    <%= f.input :root %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, f.object.new_record? ? 'Create User' : 'Update User', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
