<% content_for :title do %>
  User's details
<% end %>

<div class="page-header">
  <h1>User's details</h1>
  <div>
    <%= link_to edit_user_path(@user), class: 'btn btn-success' do %>
      <%= icon 'fas', 'edit' %>
      Edit
    <% end %>
    <%= link_to users_path, class: 'btn btn-outline-secondary' do %>
      <%= icon 'fas', 'bars' %>
      Back
    <% end %>
  </div>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @user.name %></dd>

  <dt>Email:</dt>
  <dd><%= @user.email %></dd>

  <dt>Password:</dt>
  <dd><%= @user.password %></dd>

  <dt>Photo:</dt>
  <dd><%= @user.photo %></dd>

  <dt>Root:</dt>
  <dd><%= @user.root %></dd>

</dl>
