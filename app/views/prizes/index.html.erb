<% content_for :title do %>
  Prizes
<% end %>

<div class="page-header">
  <h1>Prizes</h1>
  <%= link_to new_prize_path, class: 'btn btn-primary' do %>
    <%= icon 'fas', 'plus' %>
    New Prize
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Description</th>
        <th>Placing</th>
        <th>Raffle</th>
        <th>Ticket</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @prizes.each do |prize| %>
        <tr>
          <td><%= prize.description %></td>
          <td><%= prize.placing %></td>
          <td><%= prize.raffle %></td>
          <td><%= prize.ticket %></td>
          <td>
            <%= link_to prize, class: 'btn btn-info btn-sm' do %>
              <%= icon 'fas', 'eye', class: 'fa-fw' %>
            <% end %>
            <%= link_to edit_prize_path(prize), class: 'btn btn-success btn-sm' do %>
              <%= icon 'fas', 'edit', class: 'fa-fw' %>
            <% end %>
            <%= link_to prize, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' do %>
              <%= icon 'fas', 'times', class: 'fa-fw' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
