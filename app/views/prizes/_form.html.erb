
<%= simple_form_for @prize do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.input :placing %>
    <%= f.association :raffle %>
    <%= f.association :ticket %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, f.object.new_record? ? 'Criar Prize' : 'Atualizar Prize', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
