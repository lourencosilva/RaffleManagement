
<%= simple_form_for @kind do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.input :initial %>
    <%= f.input :step %>
    <%= f.input :quantity %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, f.object.new_record? ? 'Criar Kind' : 'Atualizar Kind', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
